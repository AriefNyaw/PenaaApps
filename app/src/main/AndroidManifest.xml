<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplikasipencarianayatal_quran">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_penaa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_penaa"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiPencarianAyatAlQuran"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.IsiTopikQuranActivity"></activity>
        <activity android:name=".Activity.TopikQuranActivity" />
        <activity android:name=".Activity.DoaActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.SearchAyatActivity" />
        <activity android:name=".Activity.AlquranActivity" />
        <activity android:name=".Activity.NamaSurahActivity" />
        <activity android:name=".Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>